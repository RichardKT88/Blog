@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IList<Blog.Models.Post>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2>Lista de Posts</h2>
        @*@Html.ActionLink("Incluir Post", "Novo")*@
        <a asp-controller="Post" asp-action="Novo">Incluir Post</a>
        <table>
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Resumo</th>
                    <th>Categoria</th>
                    <th>Publicado?</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td><a asp-controller="Post" asp-action="Visualiza") >p.Titulo</a></td>
                        
                        <td>@p.Resumo</td>
                        <td>@p.Categoria</td>
                        <td>
                            @if (p.Publicado)
                            {
                                @Html.Raw(string.Format("{0:dd/mm/yyyy}", p.DataPublicacao))
                            }
                            else
                            {
                                @Html.Raw("Não")
                                ;
                            }
                        </td>
                        <td><a asp-controller="Post" asp-action="RemovePost")>Remover</a></td>
                        <td><a asp-controller="Post" asp-action="PublicaPost")>Publicar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

