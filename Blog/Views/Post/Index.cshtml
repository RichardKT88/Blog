@{
}
@model IList<Blog.Models.Post>
<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Resumo</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td><a href="/Post/Visualiza/@p.Id">@p.Titulo</a></td>
                <td>@p.Resumo</td>
                <td>@p.Categoria</td>
                <td><a href="/Post/RemovePost/@p.Id">Remover</a></td>
            </tr>
        }
    </tbody>
</table>
