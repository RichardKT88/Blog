    <script src="~/js/jquery-ui.min.js"></script>
    <script>
        $("input[name='Categoria']").autocomplete({
            source: function(request, response){
                $.post(
                    "@Url.Action("CategoriaAutoComplete")",
                    {termoDigitado: request.termoDigitado },
                    function (data) {
                        response(data);
                    }
                )
            }
        });
