@model IList<Post>

<h2>Lista de Posts</h2>
    @*@Html.ActionLink("Incluir Post", "Novo")*@
<a asp-controller="Post" asp-action="Novo" class = "btn btn-primary mb-2">Incluir Post</a>
<table class="table table-striped table-hover table-bordered">
    <caption>Lista dos Posts cadastrados no Blog.</caption>
    <thead>
        <tr>
            <th>Título</th>
            <th>Resumo</th>
            <th>Categoria</th>
            <th>Publicado?</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td><a asp-controller="Post" asp-action="Visualiza" asp-route-id=@p.Id>@p.Titulo</a></td>

                <td>@p.Resumo</td>
                <td>@p.Categoria</td>
                <td>
                    @if (p.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/mm/yyyy}", p.DataPublicacao))
                    }
                    else
                    {
                        @Html.Raw("Não")
                    }
                </td>
                <td><a asp-controller="Post" asp-action="PublicaPost" asp-route-id=@p.Id>Publicar</a></td>
                <td><a asp-controller="Post" asp-action="RemovePost" asp-route-id=@p.Id>Remover</a></td>
            </tr>
        }
    </tbody>
</table>


